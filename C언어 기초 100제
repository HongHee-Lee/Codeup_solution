int main()
{
	printf("Hello World");
	return 0;
}

#1003번
#include <stdio.h>

int main()
{
	printf("Hello\n");                 //         \n 은 줄바꿈
	printf("World");
	return 0;
} 



printf("Hello\n");
printf("World");

둘이 같음

printf("Hello\nWorld");
	
